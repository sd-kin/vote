<div id='<%= dom_id(commentable, :creation_errors_for ) %>'>
</div>

<%= form_for [commentable, comment], remote: true do |f| %>
  <%= f.label 'Comment:' %> <br>
  <%= f.text_area :body %> <br>
  <%= f.submit %>
<% end %>

<%= button_to 'Cancel', comment_path(comment), method: :get, remote: true unless comment.new_record? %>
