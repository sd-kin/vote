<% if @created %>
  $('#<%= dom_id(@comment.commentable, :comments_for) %>').append('<%= escape_javascript render @comment %>');
  $('#<%= dom_id(@comment.commentable, :reply_form_for) %>').html("<%= escape_javascript link_to 'Reply', new_comment_path( comment_id: @comment.commentable ), remote: true %>");
  $('#form_for_poll_comment #new_comment')[0].reset();
  $('.file-input label')[0].innerText=' No file chosen '
  $('#comment-images')[0].innerHTML='';
<% else %>
  $('#<%= dom_id(@comment.commentable, :reply_form_for) %>').html('<%= escape_javascript render "comments/form", comment: @comment %>');
<% end %>
$('#creation_errors_for_comment').html('<%= escape_javascript render "errors", comment: @comment %>');
