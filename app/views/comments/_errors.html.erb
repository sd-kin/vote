<% if comment && comment.errors.any? %>
  <% comment.errors.full_messages.each do |msg| %>
    <div class='alert alert-dismissible alert-danger fade in text-center'>
      <big><%= msg %></big>
      <%= button_tag 'x', class: "close", data: { dismiss: "alert"} %>
    </div>
  <% end %>
<% end %>
