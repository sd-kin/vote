<div id="<%= dom_id(@user) %>" class="container">
  <%= form_for @user do |f| %>
    <div class="row">
      <div class="col-md-6 form-group">
        <%= f.label 'Login:', { class: "control-label" } %>
        <%= f.text_field :username, { class: "form-control" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 form-group">
        <%= f.label 'Email:', { class: "control-label" } %>
        <%= f.email_field :email, { class: "form-control" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 form-group">
        <%= f.label 'Password', { class: "control-label" } %>
        <%= f.password_field :password, { class: "form-control" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 form-group">
        <%= f.label 'confirm password', { class: "control-label" } %>
        <%= f.password_field :password_confirmation, { class: "form-control" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 form-group form-inline">
        <label class="btn btn-dark-gray btn-file">
          Browse <%= f.file_field :avatar %>
        </label>
        <%= f.label 'Choose file for avatar', { class: "form-control control-label file_label"} %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 form-group">
        <%= f.submit 'Ok', { class: "btn btn-dark-gray" } %>
      </div>
    </div>
  <% end %>
</div>
