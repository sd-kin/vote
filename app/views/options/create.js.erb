<% unless @option.errors.messages.any? %>
  $('#options').html('<%= escape_javascript render @option.poll.options %>');
  $('#<%= dom_id(@option.poll, :errors_for) %>').html('<%= escape_javascript render "polls/errors", poll: @option.poll %>');
<% end %>
$('#<%= dom_id(Option.new) %>').html('<%= escape_javascript render "form", poll: @option.poll %>');
$('#<%= dom_id(Option.new, :errors_for_new) %>').html('<%= escape_javascript render "errors", option: @option %>');
