<div id=<%= "option_#{option.id}" %>>
  <% if @option && @option.errors.any? %>
    <div>
      <%= pluralize(@option.errors.count, 'error')%>  prohibited this poll from being saved 
      <ul>
      <% @option.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

  <li>
    Title: <%= option.title %> <br>
    Description: <%= option.description %> <br>
    <%= link_to 'Edit', edit_poll_option_path(poll, option), remote: true %> 
