<div id = "<%= dom_id(poll) %>">

  <div id = "<%= dom_id(poll, :errors_for) %>">
    <% render 'errors', poll: poll %>
  </div>
  
  <div id = "<%= dom_id(poll, :title_for) %>">
    Title: <%= poll.title %>
  </div>

  <%= render 'shared/rating', object: poll %>

  <%= link_to 'edit', edit_poll_path( poll ), remote: true unless poll.ready?%>
  <ul>
    <div data-poll-id = "<%= poll.id %>" id = "options" class="sortable">
      <%= render poll.options %>
    </div>
  </ul>
</div>  
