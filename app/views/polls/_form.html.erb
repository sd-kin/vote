<%= form_for @poll, remote: true do |f| %>
  <%= f.label 'Title:'%>
  <%= f.text_field :title %> <br>
  <%= f.label 'Maximum voters(empty for infinity):'%>
  <%= f.number_field :max_voters, min: 1 %> <br>
  <%= f.label 'Expiration date:' %>
  <%= f.date_select :expire_at %> <br>
  <%= f.submit 'Ok' %>
<% end %>

<%= button_to 'Cancel', {action: :edit}, method: :get unless @poll.new_record? %>
