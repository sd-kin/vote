<%= render @poll %>
<div id='choice'>
  <%= render 'choice', poll: @poll %>
</div>

<hr>

<ul>
  <div id='<%= dom_id(@poll, :comments_for) %>'>
    <%= render @poll.comments %>
  </div>
</ul>

<div id="<%= dom_id( @poll.comments.build) %>">
  <%= render 'comments/form', comment: @poll.comments.build , remote: true unless current_user.anonimous? %>
</div>

<%= link_to 'back', :back %>
