Status: <%= poll.status %>

<% if poll.draft? %>
  <%= button_to 'Make ready', make_ready_poll_path(poll), remote: true %>
<% else %>
  <%= button_to 'Make draft', make_draft_poll_path(poll), remote: true, data: { confirm: 'Votation progress will be lost!' } %>
  (All progress will be lost!)
<% end %>
