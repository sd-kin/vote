Status: <%= poll.status %>

<% if poll.draft? %>
  <%= button_to 'Make ready', make_ready_poll_path(poll), remote: true %>
<% end %>

<% if poll.ready? || poll.deleted? %>
  <%= button_to 'Make draft', make_draft_poll_path(poll), remote: true %>
<% end %>

<% if poll.closed? %>
  <%= button_to 'Make draft', make_draft_poll_path(poll), remote: true, data: { confirm: 'All votes will be destroyed! Are you shure?' } %>
  (All progress will be lost!)
<% end %>